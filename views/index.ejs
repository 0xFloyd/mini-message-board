<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/new">New Message</a>
    <% if(messages.length) {
      %> <ul>
        <% messages.forEach((message) => {
          %> 
            <li>
              <%= message.user %> says: "
              <%= message.text %>" on --> 
              <%= message.added %>
            
            </li>

            <%
        }) %>
      </ul> <%
    } %>
  </body>
</html>
